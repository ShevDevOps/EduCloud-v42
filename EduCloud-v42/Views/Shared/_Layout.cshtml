        function handleCredentialResponse(response) {
            // 'response.credential' - це і є твій новий id_token (JWT)
            console.log("ID Token: " + response.credential);

            fetch('/Account/GoogleLogin', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    // Якщо ти використовуєш AntiForgeryToken, додай його сюди
                },
                // Ми відправляємо об'єкт, який очікує твій GoogleLoginDto
                body: JSON.stringify({ token: response.credential })
            })
            .then(response => {
                if (response.ok) {
                    // Якщо бекенд повернув 'Ok', перезавантажуємо сторінку
                    // (або перенаправляємо на головну)
                    window.location.href = '/';
                } else {
                    console.error('Помилка логіну через Google на бекенді.');
                }
            })
            .catch(error => {
                console.error('Помилка при відправці токену:', error);
            });
        }
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
