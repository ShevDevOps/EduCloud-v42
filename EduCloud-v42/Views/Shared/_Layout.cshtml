<body>
    @using System.Security.Claims
    @{
        var userId = User.FindFirst("id")?.Value;
    }
    <header>
        <a class="lable" asp-area="" asp-controller="Home" asp-action="Index">EduCloud_v42</a>
        <ul class="Page-bar">
            <li class="page-item">
