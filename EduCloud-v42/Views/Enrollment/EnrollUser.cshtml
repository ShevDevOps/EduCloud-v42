@model EduCloud_v42.Models.UserCourse

@{
    ViewData["Title"] = "Enroll User";
    var courseName = ViewData["CourseName"];
}

<h1>Enroll User in @courseName</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EnrollUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="CourseId" />

            <div class="form-group">
                <label asp-for="UserId" class="control-label">User</label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
            </div>

            <div class="form-group">
                <label asp-for="Role" class="control-label"></label>
                <select asp-for="Role" class="form-control" asp-items="Html.GetEnumSelectList<CourseRole>()"></select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Enroll" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="UsersInCourse" asp-route-courseId="@Model.CourseId">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}