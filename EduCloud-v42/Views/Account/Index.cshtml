}

<h1>Ваш профіль</h1>

<div>
    <h4>@Model.Username</h4>
    <div>
        <b>Ім'я</b>:@Model.FullName
    </div>
    <div>
        <b>Email</b>:@Model.Email
    </div>
    <div>
        <b>Телефон</b>:@Model.Phone
    </div>
    </dl>
