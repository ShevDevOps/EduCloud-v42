@model EduCloud_v42.Models.User

@{
    

}

<h1>Ваш профіль</h1>

<div>
    <h4>@Model.Username</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Username)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Username)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
    </dl>
</div>
<div>
    <a asp-controller="Courses" asp-action="Index">Переглянути курси</a>
</div>
<h3>Ваші курси:</h3>
<ul>
    @foreach (var el in Model.UserCourses)
    {
        <li>
            @el.Course.Name |<a asp-controller="Course" asp-action="Details" asp-route-id="@el.CourseId">Details</a>|
        </li>
    }
</ul>